{
  "platform-version": "2.2",
  "product": {
    "freshdesk": {
      "location": {
        "ticket_sidebar": {
          "url": "templates/index.html",
          "icon": "images/icon.svg"
        }
      },
      "events": {
        "onScheduledEvent": {
          "handler": "onScheduledEventHandler"
        }
      },
      "functions": {
        "fetchSchedule": {
          "timeout": 5
        },
        "updateSchedule": {
          "timeout": 5
        },
        "deleteSchedule": {
          "timeout": 5
        }
      }
    }
  },
  "dependencies": {
    "request": "2.87.0",
    "base-64": "0.1.0"
  },
  "whitelisted-domains": [
    "https://*.freshdesk.com"
  ]
}
