{
  "client_id": "xxxxxxxxxxxxx",
  "client_secret": "xxxxxxxxxxxxx",
  "authorize_url": "https://<%= oauth_iparams.subdomain %>.myshopify.com/admin/oauth/authorize",
  "token_url": "https://<%= oauth_iparams.subdomain %>.myshopify.com/admin/oauth/access_token",
  "options": {
    "scope": "write_orders,read_customers,read_products"
  },
  "token_type": "account",
  "oauth_iparams": {
    "subdomain": {
       "display_name": "Shopify domain",
       "description": "Please enter your Shopify domain",
       "type": "text",
       "required": true
     }
  }
}
